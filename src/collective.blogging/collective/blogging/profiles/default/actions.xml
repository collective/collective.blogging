<?xml version="1.0"?>
<object name="portal_actions" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="document_actions">
        <object name="edit_content" meta_type="CMF Action" i18n:domain="collective.blogging">
            <property name="title" i18n:translate="">Edit</property>
            <property name="description" i18n:translate="">Click to edit this entry.</property>
            <property name="url_expr">string:$object_url/edit</property>
            <property name="icon_expr"></property>
            <property
                name="available_expr">object/is_entry|nothing</property>
            <property name="permissions">
                <element value="Modify portal content"/>
            </property>
            <property name="visible">True</property>
        </object>
    </object>
</object>