<div class="entryFile" i18n:domain="collective.blogging"
    tal:define="size context/file/size|nothing">
    
    <tal:block condition="size"
        define="filename context/file/filename|nothing">
        <span i18n:translate="file_download">File download</span>:
        <a href=""
            tal:attributes="href string:${context/absolute_url}/@@download/file/${filename}"
            tal:content="filename">
            File
        </a>&mdash;<span tal:replace="python:size/1024">54</span> KB
    </tal:block>
    
    <dl class="portalMessage warning" tal:condition="python:viewlet.editor and not size">
        <dt i18n:translate="warning">Warning</dt>
        <dd i18n:translate="no_file_uploaded">There is no file uploaded yet.</dd>
    </dl>
</div>