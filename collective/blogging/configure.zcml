<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="collective.blogging">
    
    <five:registerPackage package="." initialize=".initialize" />
    
    <includeDependencies package="." />
    
    <include package=".actions" />
    <include package=".browser" />
    <include package=".portlets" />
    
    <i18n:registerTranslations directory="locales" />
    
    <!-- extenders -->
    <adapter
        factory=".extenders.FolderExtender"
        provides="archetypes.schemaextender.interfaces.IOrderableSchemaExtender"
        name="collective.blogging.folderextender" />
    
    <adapter
        factory=".extenders.LargeFolderExtender"
        provides="archetypes.schemaextender.interfaces.IOrderableSchemaExtender"
        name="collective.blogging.largefolderextender" />
    
    <adapter
        factory=".extenders.TopicExtender"
        provides="archetypes.schemaextender.interfaces.IOrderableSchemaExtender"
        name="collective.blogging.topicextender" />
    
    <adapter
        factory=".extenders.DocumentExtender"
        provides="archetypes.schemaextender.interfaces.ISchemaExtender"
        name="collective.blogging.documentextender" />
    
    <adapter
        factory=".extenders.NewsItemExtender"
        provides="archetypes.schemaextender.interfaces.ISchemaExtender"
        name="collective.blogging.newsitemextender" />
    
    <adapter
        factory=".extenders.EventExtender"
        provides="archetypes.schemaextender.interfaces.IOrderableSchemaExtender"
        name="collective.blogging.eventextender" />
    
    <adapter
        factory=".extenders.LinkExtender"
        provides="archetypes.schemaextender.interfaces.ISchemaExtender"
        name="collective.blogging.linkextender" />
    
    <adapter
        factory=".extenders.ImageExtender"
        provides="archetypes.schemaextender.interfaces.ISchemaExtender"
        name="collective.blogging.imageextender" />
    
    <adapter
        factory=".extenders.FileExtender"
        provides="archetypes.schemaextender.interfaces.ISchemaExtender"
        name="collective.blogging.fileextender" />

    <!-- Enable next/previous links for blogs -->
    <adapter factory=".nextprevious.BlogNextPrevious" />
    
    <!-- Roles -->
    <utility
        name="Blogger"
        factory=".sharing.BloggerRole"
        />
    
    <!-- Permissions -->
    <permission
        id="collective.blogging.Blog"
        title="collective.blogging: Blog"
        />
    
    <!-- Indexes -->
    <adapter factory=".indexer.year" name="publish_year" />
    <adapter factory=".indexer.month" name="publish_month" />
    
    <!-- profiles -->
    <genericsetup:registerProfile
        name="default"
        title="Blogging"
        directory="profiles/default"
        description="Setup profile for a simple blogging improvements for Plone."
        for="Products.CMFPlone.interfaces.IPloneSiteRoot"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

</configure>

